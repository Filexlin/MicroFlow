{
  "$schema": "https://schemas.tauri.app/config/2.0",
  "productName": "MicroFlow",
  "version": "0.1.0",
  "identifier": "com.microflow.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../web/dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "MicroFlow",
        "width": 1400,
        "height": 900,
        "center": true
      }
    ]
  },
  "plugins": {
    "dialog": {
      "open": true,
      "save": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/256x256.ico"]
  }
}
